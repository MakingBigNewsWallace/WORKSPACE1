   <script type="text/javascript">
       function rng() {
           return x = Math.floor(Math.random() * 256 - 1);
       }

       function time() 
       {
           var clock = new Date();
           var hour = clock.getHours();
           var minute = clock.getMinutes();
           var second = clock.getSeconds();
           function adjust(x) 
           {
               if (x < 10)
                {
                   x = "0" + second;
               } return x
           }
           hour = adjust(hour);
           minute = adjust(minute);
           second = adjust(second);
           cycle();
           function cycle() 
           {
               if (second > 58)
                {
                   second = 59;
                   document.getElementById('txt').innerHTML = hour + ":" + minute + ":" + second + "-1s";

               }

               else if (clock.getMilliseconds() < 500) 
               {
                   document.getElementById('txt').innerHTML = hour + ":" + minute + ":" + second + "+1s";
                   document.getElementById("bd1").style.color = " RGB(" + rng() + "," + rng() + "," + rng() + ")";
               } else 
               {
                   document.getElementById('txt').innerHTML = hour + ":" + minute + ":" + second;


               }
               document.getElementById('1').style.color = " RGB(" + rng() + "," + rng() + "," + rng() + ")";
               document.getElementById('2').style.color = " RGB(" + rng() + "," + rng() + "," + rng() + ")";
               document.getElementById('3').style.color = " RGB(" + rng() + "," + rng() + "," + rng() + ")";
               document.getElementById('4').style.color = " RGB(" + rng() + "," + rng() + "," + rng() + ")";
           } t = setTimeout(function () { time() }, 500);
       }
       //  function change(){
       //<link rel="stylesheet" type="text/css" href="CSScontrol-TASK2-2.css"/>
       //}
        

</script>

